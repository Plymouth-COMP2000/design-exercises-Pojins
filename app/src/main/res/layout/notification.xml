<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3ED"
    android:padding="24dp">

    <!-- Profile Image -->

    <!-- App Logo -->

    <!-- Page Title -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="109dp"
        android:layout_height="84dp"
        android:contentDescription="Savory Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/savory_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Description 1 -->

    <TextView
        android:id="@+id/notificationHeader"
        android:layout_width="406dp"
        android:layout_height="66dp"
        android:layout_marginTop="36dp"
        android:background="#D9D9D9"
        android:padding="12dp"
        android:text="RESERVATION"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage" />

    <!-- ON Button 1 -->
    <TextView
        android:id="@+id/tvDesc1"
        android:layout_width="360dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:text="Get a notification when your reservation status changes"
        android:textSize="22sp"
        android:fontFamily="@font/itim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notificationHeader" />

    <Button
        android:id="@+id/buttnOn1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="ON"
        android:textAllCaps="false"
        android:background="@drawable/button_toggle"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/tvDesc1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnOff1"
        android:layout_marginTop="12dp"/>

    <!-- OFF Button 1 -->
    <Button
        android:id="@+id/btnOff1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="OFF"
        android:textAllCaps="false"
        android:background="@drawable/button_toggle"
        android:stateListAnimator="@null"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc1"
        app:layout_constraintStart_toEndOf="@id/buttnOn1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Description 2 -->

    <!-- ON Button 2 -->

    <TextView
        android:id="@+id/tvDesc2"
        android:layout_width="357dp"
        android:layout_height="97dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/itim"
        android:text="Get a notification when a reservation is made"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttnOn1" />

    <Button
        android:id="@+id/buttnOn2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="ON"
        android:textAllCaps="false"
        android:background="@drawable/button_toggle"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/tvDesc2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnOff2"
        android:layout_marginTop="12dp"/>

    <!-- OFF Button 2 -->
    <Button
        android:id="@+id/btnOff2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="OFF"
        android:textAllCaps="false"
        android:background="@drawable/button_toggle"
        android:stateListAnimator="@null"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc2"
        app:layout_constraintStart_toEndOf="@id/buttnOn2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
