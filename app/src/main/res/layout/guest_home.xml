<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- White overlay to brighten background -->

    <!-- Logo (top right) -->

    <!-- Welcome Text -->

    <View
        android:id="@+id/whiteOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/guestmenuIcon"
        android:layout_width="82dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Menu"
        android:src="@drawable/menu"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="164dp"
        android:layout_height="109dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Savory Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/savory_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME,"
        android:textStyle="bold"
        android:textColor="#E0D6D6"
        android:textSize="18sp"
        android:fontFamily="@font/itim"
        android:layout_marginStart="24dp"
        android:layout_marginTop="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/selectChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Choice"
        android:fontFamily="@font/itim"
        android:textColor="#E0D6D6"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText" />



    <!-- Manage Menu Button -->


    <!-- Manage Reservation Button -->

    <Button
        android:id="@+id/GuestMenuButton"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@null"
        android:elevation="8dp"
        android:fontFamily="@font/itim"
        android:text="MENU"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:minWidth="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectChoiceText" />

    <Button
        android:id="@+id/GuestReservationButton"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="RESERVATION"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/itim"
        android:textColor="#000000"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@null"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GuestMenuButton" />



</androidx.constraintlayout.widget.ConstraintLayout>
