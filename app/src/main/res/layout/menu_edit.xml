<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Transparent overlay -->
    <View
        android:id="@+id/whiteOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Menu Icon (top-left) -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Menu"
        android:src="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo (top-right) -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:contentDescription="Savory Logo"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header bar -->
    <TextView
        android:id="@+id/menuHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:text="MENU"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Name Input -->
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="197dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_input"
        android:hint="NAME"
        android:padding="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/priceInput"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuHeader" />

    <!-- Price Input -->
    <EditText
        android:id="@+id/priceInput"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="PRICE"
        android:background="@drawable/rounded_input"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/nameInput"
        app:layout_constraintStart_toEndOf="@id/nameInput"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Image Section (MOVED LOWER) -->

    <!-- Save Changes Button -->

    <LinearLayout
        android:id="@+id/addImageContainer"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_container"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameInput">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Add Image"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="#000000" />

        <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ADD IMAGE"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/saveChangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE CHANGES"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/rounded_input"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/addImageContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
